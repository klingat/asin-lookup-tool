<div class="container">
  <%= link_to("Add new product", new_product_path, class: "button") %>

  <% if @products.empty? %>
    <p>You do not have any saved products.</p>
  <% else %>
    <h1>Your saved products</h1>
    <div class="product-list">
      <% @products.each do |product| %>
        <div class="product-item">
          <a href="<%= product_path(product.asin) %>">
            <h3><%= product.asin %> <small>(<%= product.name %>)</small></h3>
          </a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>  